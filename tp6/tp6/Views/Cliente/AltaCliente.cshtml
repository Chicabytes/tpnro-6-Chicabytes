@model Cliente
<div class="card">

    <h5 class="card-header info-color white-text text-center py-4">
        <strong>Alta Cliente</strong>
    </h5>
    <br>
    <div class="card-body px-lg-5 pt-0">
        <form class="text-center" style="color: #757575;" asp-action="CargaCliente" method="post">
            <div class="md-form">
                <input class="form-control" type="text" asp-for="Nombre">
                <label asp-for="Nombre">Nombre</label>
            </div>
            <div class="md-form">
                <input class="form-control" type="text" asp-for="Direccion">
                <label asp-for="Direccion">Direccion</label>
            </div>
            <div class="md-form">
                <input class="form-control" type="text" asp-for="Telefono">
                <label asp-for="Telefono">Telefono</label>
            </div>
            <div class="md-form">
                <select asp-for="Tipo">
                    <option value="0">Delicado</option>
                    <option value="1">Express</option>
                    <option value="2">Ecologico</option>
                </select>
            </div>
            <div class="md-form">
                ¿Posee cupon de descuento?
                <label>
                    <input type="checkbox" asp-for="Cupon" value="true">Si
                    <input type="checkbox" asp-for="Cupon" value="false">No
                </label>
            </div>
            <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Enviar</button>
        </form>
    </div>
</div>

